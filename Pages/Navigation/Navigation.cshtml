@model RCAONE.Pages.Navigation.NavigationModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>默生 RCA CAPA导航界面</title>
    <link rel="stylesheet" type="text/css" href="~/css/Navigation.css">
    <link rel="stylesheet" type="text/css" href="~/css/Pagestyle.css">
</head>
<body style="width: 100%;background-image: url(../img/2.jpg);height: 700px;">
    <svg style="display: none">
      <filter id="chalk">
        <feTurbulence
          result="T"
          numOctaves="3"
          seed="0"
          type="fractalNoise"
          baseFrequency=".4"
        />
        <feOffset dy="-2" dx="-2" />
        <feDisplacementMap
          in2="T"
          scale="5"
          xChannelSelector="R"
          yChannelSelector="G"
          in="SourceGraphic"
        />
      </filter>
    </svg>
    <!-- 粉笔图案模式（pattern）定义结束 -->
 
   <p id="title">It all starts here</p>
    <main>
       <form method="post">
          <input type="hidden" value="@Model.Admin.ID" asp-for="AdminID">
          <!-- 五十音图容器 -->
          <div class="jp-grid">
            <!-- 行元素 -->
            <div class="row">
              <!-- 发音单元格 -->
              <div class="pro-card-wrapper">
                <!-- 控制前、后翻转 -->
                <div class="pro-card">
                  <!-- 平假名 -->
                  <div class="hiragana">
                    <div class="character">Problem declare</div>
                  </div>
                  <!-- 片假名 -->
                  <div class="katakana">
                    <input value="EMERSON" class="character"type="submit" asp-page-handler="First"/>
                    <div class="romaji"></div>
                  </div>
                </div>
              </div>
        </form>
         <form method="post">
              <input type="hidden" value="@Model.Admin.ID" asp-for="AdminID">
              <div class="pro-card-wrapper">
                <div class="pro-card">
                  <div class="hiragana">
                     <div class="character">Group Search</div>
                    <div class="romaji"></div>
                  </div>
                  <div class="katakana">
                    <input value="EMERSON" class="character"type="submit" asp-page-handler="Second"/>
                    <div class="romaji"></div>
                  </div>
                </div>
          </div>
        </form>
        <form method="post">
            <input type="hidden" value="@Model.Admin.ID" asp-for="AdminID">
            <div class="pro-card-wrapper">
            <div class="pro-card">
                <div class="hiragana">
                    <div class="character">Data analysis</div>
                    <div class="romaji"></div>
                </div>
                <div class="katakana">
                   <input value="EMERSON" class="character" type="submit" asp-page-handler="Third"/>
                    <div class="romaji"></div>
                </div>
            </div>
            </div>
          </form>
          <form method="post">
              <input type="hidden" value="@Model.Admin.ID" asp-for="AdminID">
              <div class="pro-card-wrapper">
                <div class="pro-card">
                  <div class="hiragana">
                    <div class="character">Score</div>
                    <div class="romaji"></div>
                  </div>
                  <div class="katakana">
                    <input value="EMERSON" class="character"type="submit" asp-page-handler="Fourth"/>
                    <div class="romaji"></div>
                  </div>
                </div>
              </div>
          </form>
          <form method="post">
              <input type="hidden" value="@Model.Admin.ID" asp-for="AdminID">
              <div class="pro-card-wrapper">
                <div class="pro-card">
                  <div class="hiragana">
                    <div class="character">Report &VA</div>
                    <div class="romaji"></div>
                  </div>
                  <div class="katakana">
                    <input value="EMERSON" class="character"type="submit" asp-page-handler="Fifth"/>
                    <div class="romaji"></div>
                  </div>
                </div>
              </div>
          </form>
        </div>
        <div class="row">
          <form method="post">
              <input type="hidden" value="@Model.Admin.ID" asp-for="AdminID">
              <div class="pro-card-wrapper">
                <div class="pro-card"id="card1">
                  <div class="hiragana">
                    <div class="character">Report list</div>
                    <div class="romaji"></div>
                  </div>
                  <div class="katakana">
                    <input value="EMERSON" class="character"type="submit" asp-page-handler="Sixth"/>
                    <div class="romaji"></div>
                  </div>
                </div>
              </div>
          </form>
          <form method="post">
                <input type="hidden" value="@Model.Admin.ID" asp-for="AdminID">
                <div class="pro-card-wrapper">
                    <div class="pro-card"id="card2">
                        <div class="hiragana">
                        <div class="character">Personal center</div>
                        <div class="romaji"></div>
                        </div>
                        <div class="katakana">
                        <input value="EMERSON" class="character"type="submit" asp-page-handler="Seventh"/>
                        <div class="romaji"></div>
                        </div>
                    </div>
                </div> 
           </form>
        </div> 
          </div>
        </div> 
        </div>
      </div>
      <!-- 五十音图结束 -->
    </main>
</div>
