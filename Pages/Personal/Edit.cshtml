@page
@model RCAONE.Pages.Personal.EditModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>艾默生 RCA CAPA 个人信息修改界面</title>
    <link rel="stylesheet" type="text/css" href="~/css/Registered.css">
    <link rel="stylesheet" type="text/css" href="~/css/index.css">
    <link rel="stylesheet" type="text/css" href="~/css/Pagestyle.css">
    <link rel="stylesheet" type="text/css" href="~/css/left_nav.css">
    <script type="text/javascript" src="~/js/vue.js"></script>
    <script type="text/javascript" src="~/js/index.js" ></script>
</head>
<body>
    <hr class="ph1"> 
    <div>
        <div id="app" class="pd1">
            <el-row>
                <el-button onclick="window.location.href = '../Navigation/Navigation?id=@Model.Admin.ID';" type="success" icon="el-icon-s-home" circle></el-button>
            </el-row>
        </div>
        <p style="margin-left: 50px;"> 
            <img src="~/img/logo.jpg" alt="艾默生logo" align="middle" width="110" height="45"/>
            <span class="ps1">EMERSON RCA CAPA SYSTEM</span>
        </p>
    </div>
    <hr class="ph2">

    <div style="background-image: url(../img/5.jpg);width: 100%;height: 700px;">
        <div class="fixed_content" style="width: 93%; margin: 0 20px 0 20px;padding: 0;"><p style="margin-bottom: 0px;margin: 20px 20px 0 50px;">Modify the information</p></div>
        <div class="fixed_content" style="width: 90%;margin: 0 20px 0 80px;">
            <p></p>
            <p style="margin-bottom: 10px;">Please fill in the following information carefully</p>
            <div class="div_Title_1" style="width: 1080px;margin-left: 0;">
                <form method="post" style="margin-top: 40px;">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" value="@Model.Employee.ID" asp-for="Employee.ID" />
                    <input type="hidden" value="@Model.Employee.userid" asp-for="Employee.userid" />
                    <input type="hidden" value="@Model.Employee.ishead" asp-for="Employee.ishead" />
                    <input type="hidden" value="@Model.Employee.isfree" asp-for="Employee.isfree" />
                    <input type="hidden" value="@Model.Employee.onreport" asp-for="Employee.onreport" />
                    <input type="hidden" value="@Model.Admin.ID" asp-for="AdminID">
                    <div class="div_input">
                        <label asp-for="Employee.userpassword" class="control-label"></label><br>
                        <input asp-for="Employee.userpassword"/>
                        <span asp-validation-for="Employee.userpassword" class="text-danger"></span>
                    </div>
                    <div class="div_input">
                        <label asp-for="Employee.username" class="control-label"></label><br>
                        <input asp-for="Employee.username"/>
                        <span asp-validation-for="Employee.username" class="text-danger"></span>
                    </div>
                    <div class="div_input">
                        <label asp-for="Employee.useremail" class="control-label"></label><br>
                        <input asp-for="Employee.useremail"/>
                        <span asp-validation-for="Employee.useremail" class="text-danger"></span>
                    </div>
                    <div class="div_input">
                        <label asp-for="Employee.usergender" class="control-label"></label><br>
                        <input asp-for="Employee.usergender"/>
                        <span asp-validation-for="Employee.usergender" class="text-danger"></span>
                    </div>
                    <div class="div_input" style="width:720px;">
                        <label asp-for="Employee.userdepartment" class="control-label"></label><br>
                        <input asp-for="Employee.userdepartment"/>
                        <span asp-validation-for="Employee.userdepartment" class="text-danger"></span>
                    </div>
                    <div style="width:300px;float:left;" >
                        <input class="button-opacity-big" type="submit" value="Confirm" style="font-size: 25px;font-weight:600;">
                    </div>
                    <div style="width:300px;float:left;" class="button-decoration" onclick="window.location.href = './Personal?id=@Model.Admin.ID';">
                        <p style="font-size: 25px;font-weight:600;margin:12px 0 0 75px;">Return</p>
                    </div>    
                </form>
            </div>
        </div>
    </div>
    
     <div class="footer" >
        <ul>
            <li>About Us</li>
            <li>Contact Us</li>
            <li>Cooperation</li>
            <li>Help Center</li>
            <li>Feedback</li>
        </ul>
        <p>©2020 Emerson Electric Co. All rights reserved. | ICP 备 xxxxxxxx号</p>
    </div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
<script>var app1 = new Vue().$mount('#app')</script>
</html>
